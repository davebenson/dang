// PURPOSE: exercise basic mathematical ops

assert([1 2 3 4] + [4 8 16 32] == [5 10 19 36]);
assert([1 2 3 4] - [4 8 16 32] == [-3 -6 -13 -28]);
assert([1.0 2.0 3.0 4.0] + [4.0 8.0 16.0 32.0]
       == [5.0 10.0 19.0 36.0]);
assert([1.0 2.0 3.0 4.0] - [4.0 8.0 16.0 32.0]
       == [-3.0 -6.0 -13.0 -28.0]);

assert([1.0F 2.0F 3.0F 4.0F] + [4.0F 8.0F 16.0F 32.0F]
       == [5.0F 10.0F 19.0F 36.0F]);
assert([1.0F 2.0F 3.0F 4.0F] - [4.0F 8.0F 16.0F 32.0F]
       == [-3.0F -6.0F -13.0F -28.0F]);

assert([1. 2. 3. 4.] * 3. == [3. 6. 9. 12.]);
assert(3. * [1. 2. 3. 4.] == [3. 6. 9. 12.]);
assert([1F 2F 3F 4F] * 3F == [3F 6F 9F 12F]);
assert(3F * [1F 2F 3F 4F] == [3F 6F 9F 12F]);
