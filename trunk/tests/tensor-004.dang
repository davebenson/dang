// PURPOSE: test grep

{
  vector<int> a = [ 1 2 3 4 5 6 7 ];
  var b = grep(a, function a -> (a % 3 == 1));
  assert(b == [1 4 7]);

  b = grep(a, function a -> a % 3);
  assert(b == [1 2 4 5 7]);
}


{
  vector<string> v = ["hi" "mom" "oops" "whateve" "xyz" "xyzw"];
  assert(grep(v, function t -> length(t) % 2U) == ["mom" "whateve" "xyz"]);
  assert(grep(v, function t -> length(t) % 2U == 0U) == ["hi" "oops" "xyzw"]);
}
